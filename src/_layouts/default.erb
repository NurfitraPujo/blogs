<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;700&family=Ubuntu:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/a843303db9.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="<%= resource.data.layout %> <%= resource.data.page_class %> bg-gradient-radial flex flex-col items-center min-h-screen w-100">
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <main class="flex flex-col items-center flex-grow">
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
